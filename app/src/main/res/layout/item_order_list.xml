<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/list_item"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_background"
        android:padding="5dp">


        <TextView
            android:id="@+id/tv_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:text="订单号：012345678001" /><!--110dp-->

        <TextView
            android:id="@+id/tv_delivery_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_order"
            android:layout_below="@+id/tv_order"
            android:layout_marginRight="80dp"
            android:layout_marginTop="3dp"
            android:text="下单时间：2018-03-28 18:30:26" />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_delivery_time"
            android:layout_below="@+id/tv_delivery_time"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:text="收货地址：江苏省南京市江宁区金陵科技学院" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_place"
            android:layout_below="@+id/tv_place"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:text="商品数量：共计5件" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_num"
            android:layout_below="@+id/tv_num"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:text="订单总价：30.80元"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_payway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_num"
            android:layout_below="@+id/tv_money"
            android:layout_marginRight="80dp"
            android:layout_marginTop="3dp"
            android:text=""
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@color/deepskyblue" />

        <Button
            android:id="@+id/btn_button1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_delivery_time"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@drawable/backgrond_yuanjiao_red"
            android:gravity="center"
            android:text="签收"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_action"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_num"
            android:layout_marginBottom="5dp"
            android:background="@drawable/backgrond_yuanjiao_red"
            android:gravity="center"
            android:maxLines="1"
            android:text="去付款"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>